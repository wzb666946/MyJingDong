<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.com.myjingdong.myclass.ui.XqActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F83F72"
        android:layout_height="100px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="商品详情"
            android:textSize="50px" />

        <ImageView
            android:id="@+id/fh"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/leftjiantou"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/fx"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/share"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <com.youth.banner.Banner
        android:id="@+id/xq_banner"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="82dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/xq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冻结爱火锅覅发解放军"
            android:textColor="#000080" />

        <TextView
            android:id="@+id/xq_subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="冻结爱火锅覅发解放军"
            android:textColor="#000080" />

        <TextView
            android:id="@+id/bargainPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="原价"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="原价" />
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xq_gm"
                android:layout_width="0px"
                android:layout_height="100px"
                android:layout_weight="1"
                android:background="#FF8000"
                android:gravity="center"
                android:text="立即购买" />

            <TextView
                android:id="@+id/xq_addcar"
                android:layout_width="0px"
                android:layout_height="100px"
                android:layout_weight="1"
                android:background="#FF0000"
                android:gravity="center"
                android:text="加入购物车" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
